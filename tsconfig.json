{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2017.object"
    ],
    "jsx": "preserve",
    "paths": {
      "@components/*": [ "components/*" ]
    },
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "src",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  }
}
